---
import {projects} from "../../config/projects.json";
import Card from "../Card.astro";
---

<section class="mt-5">
    <h1 class="text-4xl font-bold text-center">Projects</h1>
    <div class="grid md:grid-cols-3 gap-4 py-5 px-3 sm:px-0">
        {
            projects.map(project => (
                <Card title={project.title} description={project.description} link={project.image}/>
            ))
        }
    </div>
</section>
